<h3>Patient Admission</h3>

<%= link_to 'New Patient', new_facility_patient_path %>


<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= patient.first_name %>
      <%= patient.last_name %>
      <%= link_to 'View Patient Info', facility_patient_path(@facility, patient) %>
      <%= link_to 'Delete', facility_patient_path(@facility,patient), method: :delete %>
  </li>
  <% end %>
</ul>

<ul>
<%= @doctors.each do |doctor| %>
  <li>
    <%= doctor.doctor_name %>

  </li>
<% end %>
</ul>

<%= form_for @dcotor, url: create_doctor_facility_path(@facility) do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name %>
  <br>
  <%= f.label :specialty %>
  <%= f.text_area :specialty %>
  <br>
  <%= f.submit %>
<%= end %>

<%= link_to "Home", root_path %>