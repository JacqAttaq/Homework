%h1 Regional Hospital Diretory

= form_tag facilities_path, method: :get, class: "navbar-form", role: "search" do
  .input-group
    = text_field_tag 'q', params[:q], class: "form-control", id: "srch-term", placeholder: "Search"
    .input-group-btn
      %button.btn.btn-default
        %i.glyphicon.glyphicon-search

%ul
-@facilities.each do |facility| 
  %li
  = facility.name 
  = link_to "Edit", edit_facility_path(facility) 
  = link_to "Delete", facility_path(facility), method: :delete 
  = link_to "View", facility_path(facility)  


= link_to "Create New Facility", new_facility_path 
