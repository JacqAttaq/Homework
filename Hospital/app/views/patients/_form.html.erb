<%= form_for @patient do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>  
  <%= f.label :date_of_birth %>
  <%= f.date_field :d_o_b%>
  <br>  
  <%= f.label :description %>
  <%= f.text_area :description  %>
  <br>
  <%= f.label :gender %>
  <%= f.select :gender, options_for_select([ "--select--","Male", "Female", "Trans"]) %>
  <br>
  <%= f.label :blood_type %>
  <%= f.select :blood_type, options_for_select([ "--select--","A-","A+","B-","B+","AB-","AB+","O-","O+"]) %>
  <br>
  <%= f.submit %>
<% end %>